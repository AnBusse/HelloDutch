{% extends "base.html.twig" %}

{% block title %}HelloDutch{% endblock %}
{% block head %}
    {{ parent() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block home_content %}
    <h1>Welcome!</h1>

    {%  if is_granted('ROLE_USER') %}
        <h3>{{ result.title }}</h3>
        <p>How to make it: {{ result.description }}</p>
        <p>Preparation time: {{ result.prep_time }}</p>
        <p>Waiting time: {{ result.wait_time }}</p>
        <p>Amount of servings: {{ result.servings }}</p>
    {% else %}
        <p>Please <a href="{{ path('fos_user_security_login') }}">Login</a>
            or <a href="{{ path('fos_user_registration_register') }}">Register</a>
            to proceed.
        </p>
    {% endif %}
{% endblock %}